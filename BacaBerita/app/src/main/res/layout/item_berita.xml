<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_centerInParent="true"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20-juli-2020"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:textSize="@dimen/_10ssp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_baseline_remove_red_eye_24"
                android:text="10"
                android:textSize="@dimen/_13ssp"
                />
            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_35sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_dami1"
                />

            <TextView
                android:id="@+id/title"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="ini berita ter baru yang sanqqqqqqqqqaa aaaaaaaaaaaaaaa"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_15sdp"
                android:maxLines="1"
                />
            <TextView
                android:id="@+id/desc"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:text="ini descripsi nya"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:maxLines="2"
                />
            <ImageButton
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:src="@drawable/ic_baseline_bookmark_border_24"
                android:background="@null"
                android:scaleType="centerCrop"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>